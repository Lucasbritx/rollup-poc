{
  "name": "rollup-ds-poc",
  "version": "1.7.4",
  "description": "Simple DS poc using rollup js",
  "keywords": [],
  "homepage": "https://github.com/Lucasbritx/rollup-poc#readme",
  "bugs": {
    "url": "https://github.com/Lucasbritx/rollup-poc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lucasbritx/rollup-poc.git"
  },
  "license": "ISC",
  "author": "Lucas Xavier",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./modal": "./dist/modal/index.css",
    "./button": "./dist/button/index.css",
    "./input": "./dist/input/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:webpack": "webpack --config webpack.config.cjs",
    "build:types-webpack": "tsc --declaration --emitDeclarationOnly --outDir dist --skipLibCheck",
    "build:webpack-all": "npm run build:webpack && npm run build:types-webpack",
    "test": "jest"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "babel-jest": "^30.0.2",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "ignore-loader": "^0.1.2",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "react-test-renderer": "^19.1.0",
    "rollup": "^4.44.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sass": "^1.15.3",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
}
